#include <SPI.h>
#include <MFRC522.h>
#include <Servo.h>  // Include the Servo library

#define SS_PIN 10
#define RST_PIN 9
#define BUZZER_PIN 5  // Passive Buzzer sa pin 5

MFRC522 mfrc522(SS_PIN, RST_PIN);
Servo myServo;  // Create Servo object

// Define the target UID of the card to detect
byte targetUID[] = {0x92, 0xEF, 0xA8, 0x00}; // UID 'to ng keychain

void setup() {
    Serial.begin(9600);
    SPI.begin();
    mfrc522.PCD_Init();
    myServo.attach(6);  // Servo sa pin 6
    myServo.write(0);   // Start at 0 degrees
    pinMode(BUZZER_PIN, OUTPUT); // Set buzzer as output
    Serial.println("RC522 RFID Ready. Scan a card...");
}

void loop() {
    if (!mfrc522.PICC_IsNewCardPresent() || !mfrc522.PICC_ReadCardSerial()) {
        return;
    }

    Serial.println("âœ… Scan Detected!");

    Serial.print("ðŸ“Œ Card UID:");
    for (byte i = 0; i < mfrc522.uid.size; i++) {
        Serial.print(" ");
        Serial.print(mfrc522.uid.uidByte[i], HEX);
    }
    Serial.println();

    // Check if the UID matches the target
    if (compareUID(mfrc522.uid.uidByte, targetUID, 4)) {
        // Short beep for correct UID
        beep(800, 200);  // Beep for 200ms at 500Hz
        delay(50);
        beep(800,200);

        // Rotate servo
        myServo.write(180);
        delay(2000);
        myServo.write(0);
    } else {
        // Long beep for incorrect UID
        beep(500, 1000);  // Beep for 1000ms at 500Hz
    }

    mfrc522.PICC_HaltA();  // Halt the card
}

// Function to compare two UID arrays
bool compareUID(byte *uid1, byte *uid2, byte length) {
    for (byte i = 0; i < length; i++) {
        if (uid1[i] != uid2[i]) {
            return false;
        }
    }
    return true;
}

// Function to activate passive buzzer using tone()
void beep(int frequency, int duration) {
    tone(BUZZER_PIN, frequency, duration);  // Play tone at 'frequency' for 'duration'
    delay(duration + 100);  // Wait until the sound is done
}
